<section>
  <div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">

      <% viewData.books.forEach(book => { %>
        <div class="bg-white rounded-2xl shadow-md overflow-hidden flex flex-col">

          <!-- Imagen + badge de disponibilidad -->
          <div class="relative">
            <img
              src="https://picsum.photos/seed/<%= book.id %>/600/400"
              alt="<%= book.title %> cover"
              class="w-full h-48 object-cover"
            />

            <span
              class="absolute top-4 right-4 bg-green-100 text-green-700 text-xs font-semibold px-3 py-1 rounded-full">
              <%= book.stock %> available
            </span>
          </div>

          <!-- Contenido de la tarjeta -->
          <div class="p-6 flex-1 flex flex-col">
            <h3 class="text-lg font-semibold text-gray-900 mb-1">
              <%= book.title %>
            </h3>

            <p class="text-gray-500 text-sm flex items-center gap-2 mb-4">
              <i class="fas fa-tag text-gray-400"></i>
              <span><%= book.category %></span>
            </p>

            <div class="mt-auto flex items-center justify-between">
              <div>
                <p class="text-xs text-gray-500 uppercase tracking-wide">Price</p>
                <p class="text-lg font-semibold text-gray-900">
                  $<%= book.price.toLocaleString() %>
                </p>
              </div>
            </div>

            <div class="mt-6">
              <a
                href="/books/<%= book.id %>"
                class="inline-flex items-center justify-center w-full bg-blue-100 hover:bg-blue-200 text-blue-600 font-semibold py-2 px-4 rounded-lg text-sm transition-colors duration-150"
              >
                More info
                <i class="fas fa-info-circle ml-2 text-xs"></i>
              </a>
            </div>
          </div>

        </div>
      <% }) %>

    </div>
  </div>
</section>
